:root
  font-size: $font-size-root
  +media-query(media-larger)
    font-size: $font-size-root-pc
html
  height: 100%
body
  // background-color: $bg-color-base
  // color: $font-color-base
  font-family: $font-family-base
  font-size: $font-size-base
  word-wrap: break-word
  letter-spacing: $letter-spacing-base
  // link-variation: $primary-color-shade false
  vertical-rhythm: true
  -webkit-font-smoothing: subpixel-antialiased
  -moz-osx-font-smoothing: unset
@media only screen and (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx)
  body
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscal
button // reset
  background-color: transparent
  border: 0
  cursor: pointer
  outline: 0
  padding: 0
  appearance: none
  font-size: $font-size-base
img // for missing image
  height: auto
  position: relative
  text-align: center
  max-width: 100%
  &:after
    overflow: hidden
    border: 1px dashed $grey-base
    content: "\f1c5" attr(alt) " Image not found"
    font-size: 1rem
    font-family: FontAwesome
    color: $grey-shade
    absolute: top 0 left 0
    z-index: 2
    width: 100%
    height: 100%
    background-color: $grey-tint
amp-img // follback for amp-img
  overflow: hidden
  background-color: $grey-tint
  p[fallback]
    border: 1px dashed $grey-base
    color: $grey-shade
    font-size: 1rem
    &:before
      content: "\f1c5"
      font-family: FontAwesome
      margin: auto 0.5em
